#   sudo sed -i '/^mem=/c\mem='"$REQUESTED_BYTES"'' $CONFIG_FILE
#   echo "Please reboot for changes to take effect."
# else
#   echo "The swap configuration file does not exist."
#   echo "Unable to configure swap memory"
# fi
